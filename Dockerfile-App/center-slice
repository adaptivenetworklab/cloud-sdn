FROM python:3.8-alpine
WORKDIR /usr/src/app

COPY ofp_emitter.py .
COPY ofctl_rest.py .
COPY requirements.txt .

#RUN pip install ryu 
RUN pip install --upgrade pip
RUN pip install --root-user-action=ignore requests
RUN pip install -r requirements.txt

EXPOSE 8080
EXPOSE 6633
EXPOSE 10005

CMD ["ryu", "run", "--observe-links", "--ofp-tcp-listen-port", "10005", "/usr/src/app/mount/cloud-sdn/scenario_testing/fat-tree/center-slice.py"]
